#!/bin/bash
:<< script
# ┌────────────────────────────────────────────────────────────────────────────────┐
# │ This is Fury file which describes how to build something. It can be started by │
# │ running fury in this directory, or just executing this file from a shell.      │
# └────────────────────────────────────────────────────────────────────────────────┘

universe hell

command all         training/enums training/toplevel training/types training/opaque training/extensions
command enums       training/enums
command types       training/types
command toplevel    training/toplevel
command opaque      training/opaque
command extensions  training/extensions

project training
  module toplevel
    source src/toplevel

  module types
    source src/types

  module extensions
    source src/extensions

  module enums
    source src/enums
  
  module opaque
    source src/opaque

# ┌────────────────────────────────────────────────────────────────────────────────┐
# │ The following is the code which will be run when this file is executed. For    │
# │ more information, see: https://fury.build/                                     │
# └────────────────────────────────────────────────────────────────────────────────┘
script
    BIN=fury;([ -f "$HOME/.cache/.fury" ] || (mkdir -p "$HOME/.cache" && wget -qO "$HOME/.cache/.fury" get.fury.build || curl -sL get.fury.build > "$HOME/.cache/.fury")) && [ $((md5sum "$HOME/.cache/.fury") || (md5 -q "$HOME/.cache/.fury") | head -c32) = d69a9eedddfdedcf3186b947dbdf9ba9 ] && sh $HOME/.cache/.fury || printf "Unable to launch Fury.\n"
